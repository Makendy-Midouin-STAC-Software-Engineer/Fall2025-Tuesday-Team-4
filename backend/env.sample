########################################
# Sample environment template
# How to use this file:
# - Copy the LOCAL section into backend/.env on your machine
# - Use the SHARED values for reference
# - Set the EB CONSOLE section in Elastic Beanstalk (never commit real secrets)
########################################

########################################
# LOCAL (.env) — Copy into backend/.env (for development)
########################################
# Django
DEBUG=True
SECRET_KEY=your-local-secret-key
DJANGO_SETTINGS_MODULE=ihike_backend.settings
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (prefer DATABASE_URL; fallback to discrete vars)
# Example (local Postgres): postgresql://postgres:postgres@localhost:5432/ihike
# Example (managed host like Supabase): append ?sslmode=require
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DB_NAME?sslmode=require
DB_NAME=
DB_USER=
DB_PASSWORD=
DB_HOST=
DB_PORT=5432
DB_SSLMODE=require

# API pagination
API_PAGE_SIZE=100

# CORS (set your local frontend origin; Vite default shown)
# If unset and DEBUG=True, backend allows all origins.
CORS_ALLOWED_ORIGINS=http://localhost:5173
CORS_ALLOW_CREDENTIALS=false

# Geo libraries (Windows only) – uncomment if auto-detection fails
# GDAL_LIBRARY_PATH=C:\\path\\to\\gdal311.dll
# GEOS_LIBRARY_PATH=C:\\path\\to\\geos_c.dll
# GDAL_BIN_DIR=C:\\path\\to\\OSGeo4W\\bin
# OSGEO4W_ROOT=C:\\path\\to\\OSGeo4W

########################################
# SHARED (Local + EB) — Reference values (commented)
########################################
# DJANGO_SETTINGS_MODULE=ihike_backend.settings
# ALLOWED_HOSTS=.elasticbeanstalk.com,localhost,127.0.0.1
# DB_PORT=5432
# DB_SSLMODE=require
# API_PAGE_SIZE=200
# CORS_ALLOWED_ORIGINS=https://your-frontend.vercel.app
# CORS_ALLOW_CREDENTIALS=false

########################################
# EB CONSOLE — Set via EB console or `eb setenv` (commented)
########################################
# DEBUG=False
# SECRET_KEY=replace-with-a-strong-random-secret
# DJANGO_SETTINGS_MODULE=ihike_backend.settings
# ALLOWED_HOSTS=.elasticbeanstalk.com,your-api-domain.example.com
# DATABASE_URL=postgresql://postgres.okbjguveeoapdxcsluxd:[YOUR-PASSWORD]@aws-1-us-east-2.pooler.supabase.com:5432/postgres
# API_PAGE_SIZE=100
# CORS_ALLOWED_ORIGINS=https://your-frontend.vercel.app,https://www.your-domain.com
# CORS_ALLOW_CREDENTIALS=false

# Gunicorn (container runtime tuning)
# PORT is set by EB automatically; define locally for parity if desired
# PORT=8000
# GUNICORN_WORKERS=2
# GUNICORN_TIMEOUT=90
# GUNICORN_MAX_REQUESTS=500
# GUNICORN_MAX_REQUESTS_JITTER=50




